<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="325.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.vasvari.gradebook.PersonController">
    <children>
        <Label id="personLabel" fx:id="personLabel" text="Person controller" />
        <TextField id="personName" fx:id="personName" />
        <TextField id="email" fx:id="email" />
        <Button id="searchButton" fx:id="searchButton" onAction="#loadPerson" text="Keresés" />
        <Button id="logoutButton" fx:id="logoutButton" onAction="#logout" text="Kijelentkezés" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>