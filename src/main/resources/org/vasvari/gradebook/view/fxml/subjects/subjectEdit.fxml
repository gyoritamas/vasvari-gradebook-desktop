<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="662.0" prefWidth="232.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/16"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.vasvari.gradebook.controllers.subjects.SubjectEditController">
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0" prefWidth="130.0"/>
        <ColumnConstraints halignment="LEFT" maxWidth="250.0" prefWidth="250.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="10.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="20.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="20.0"/>
        <RowConstraints prefHeight="50.0"/>
        <RowConstraints prefHeight="50.0"/>
        <RowConstraints prefHeight="50.0"/>
    </rowConstraints>
    <children>
        <Label alignment="CENTER" prefHeight="37.0" prefWidth="440.0" text="Tantárgy adatainak módosítása"
               GridPane.columnSpan="2147483647">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <!--    name    -->
        <Label text="név" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="20.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="subjectName" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </TextField>
        <Label fx:id="subjectNameErrorLabel" textFill="#b20b0b" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <!--    teacher     -->
        <Label prefHeight="17.0" prefWidth="100.0" text="tanár" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets left="20.0"/>
            </GridPane.margin>
        </Label>
        <ComboBox fx:id="subjectTeacher" prefHeight="25.0" prefWidth="250.0" GridPane.columnIndex="1"
                  GridPane.halignment="LEFT" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </ComboBox>
        <Label fx:id="subjectTeacherErrorLabel" textFill="#b20b0b" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateSubject" prefHeight="27.0"
                prefWidth="152.0" text="Mentés" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                GridPane.rowIndex="6" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </Button>
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteSubject" prefHeight="27.0"
                prefWidth="152.0" text="Tantárgy törlése" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                GridPane.rowIndex="7" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </Button>
        <Button fx:id="refreshButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="152.0" text="Frissítés"
                GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="8" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </Button>

    </children>
    <BorderPane.margin>
        <Insets left="20.0" right="20.0"/>
    </BorderPane.margin>
</GridPane>
