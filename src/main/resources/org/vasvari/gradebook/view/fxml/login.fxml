<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="325.0" spacing="20.0" xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.vasvari.gradebook.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField id="username" fx:id="username" promptText="felhasználónév"/>
    <PasswordField id="password" fx:id="password" promptText="jelszó"/>
    <Label id="errorLabel" fx:id="errorLabel"/>
    <Button id="loginButton" fx:id="loginButton" onAction="#login" text="Bejelentkezés"/>
</VBox>
