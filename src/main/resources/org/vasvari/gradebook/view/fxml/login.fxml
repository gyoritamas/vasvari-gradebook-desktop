<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="325.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.vasvari.gradebook.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField id="username" fx:id="username"/>
    <TextField id="password" fx:id="password"/>
    <Label id="resultLabel" fx:id="resultLabel" text="You are not logged in"/>
    <Button id="loginButton" fx:id="loginButton" onAction="#login" text="Bejelentkezés"/>
    <Button id="registerButton" fx:id="registerButton" onAction="#loadRegistration" text="Még nem regisztráltam"/>
</VBox>